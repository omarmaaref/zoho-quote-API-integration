<html>
  <head>
    <meta charset='utf-8' />
    <title>Angebot - Kostenträger | company | 1.0</title>
    <link
      rel='stylesheet'
      href='{{StaticFileserver}}/participation-certificate/styles.css'
    />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap'
      rel='stylesheet'
    />
  </head>
  <body>
    <div class='page-header page-fixed'>

    </div>
    <div class='page-footer page-fixed'>

    </div>
    <div class='wrapper'>
      <table class='w-full'>
        <thead>
          <tr>
            <td><div class='page-header-space'>&nbsp;</div></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class='page-content'>
              <div class='header-line'></div>
              <div class='flex flex-col items-center w-full'>
                <p class='text-4xl font-bold'>Teilnahmebescheinigung</p>
                <p
                  class='text-3xl font-bold mt-16 text-document-main-page-primary'
                >{{client.firstName}} {{client.lastName}}</p>
                <p class='m-0 text-color-secondary'>hat im Zeitraum vom
                  {{deal.startDate}}
                  bis
                  {{deal.endDate}}
                  an der</p>
                <p class='m-0 text-color-secondary'>folgenden Weiterbildung
                  teilgenommen:</p>
                <p class='mt-10 text-2xl font-bold'>{{measureSheet.name}}</p>
                <p
                  class='mt-10 text-color-secondary'
                >{{measureSheet.number}}</p>
                <p class='mt-14 font-bold mb-0'>Dauer:</p>
                <p class='m-0 text-color-secondary'>{{deal.teachingUnits}}
                  Unterrichtseinheiten</p>
                <div class='signature-container w-full'>

                  <div class='w-full'>
                    <div class='signature-image-container'>
                      <div class='signature-image signature'>
                        <img
                          src='{{StaticFileserver}}/common/images/unterschrift.png'
                          width='240'
                        />
                      </div>
                      <div class='signature-image stamp'>
                        <img
                          src='{{StaticFileserver}}/common/images/round-logo.png'
                          width='100'
                        />
                      </div>
                    </div>
                    <div class='signature-fields-container mt-50'>
                      <div
                        class='signature-container ml-10 mt-25px text-center'
                      >
                        <p class='m-0 leading-1px'>Hannover,
                          {{document.createdAt}}</p>
                        <p
                          class='m-0 leading-5px'
                        >_____________________________</p>
                        <p class='leading-30px text-xs-small m-0'>
                          Ort, Datum
                        </p>
                      </div>

                      <div class='signature-container mr-10'>
                        <p class='text-white m-0'>Hannover,
                          {{document.createdAt}}</p>
                        <p class='m-0'>____________________</p>
                        <p class='text-xs m-0'>Geschäftsführung</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div style='page-break-before: always'>
                <p
                  class='text-2xl font-bold text-center'
                >{{measureSheet.name}}</p>
                <p class='font-bold text-color-secondary'>Die absolvierten
                  Inhalte und ihr Umfang im Überblick:</p>
                <div class='section-content'>
                  {{#if courseContent}}
                    <div class='topic-plan'>
                      {{#each courseContent}}
                        <div>
                          <div class='subsection-title'>
                            <p class='font-bold mb-05'>
                              {{this.courseName}}</p>
                          </div>
                          <ul class='mt-0'>
                            {{#each this.courseContentWithTU}}
                              <li class='learning-plan-bullet-list'>
                                {{this}}
                              </li>
                            {{/each}}
                          </ul>
                        </div>
                      {{/each}}
                    </div>
                  {{else}}
                    <div
                      style='
                                 height: 400px;
                                 display: flex;
                                 align-items: center;
                                 justify-content: center;
                                 color: #ccc;
                                 font-style: italic;
                              '
                    >
                      Individueller Themenplan wird hier eingefügt
                    </div>
                  {{/if}}
                </div>
              </div>
            </td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td><div class='page-footer-space'>&nbsp;</div></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </body>
</html>