<html>
  <head>
    <meta charset='utf-8' />
    <title>Angebot - Kostenträger | company | 1.0</title>
    <link
      rel='stylesheet'
      href='{{StaticFileserver}}/attachment-two/styles.css'
    />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap'
      rel='stylesheet'
    />
  </head>
  <body>
    <div class='page-header page-fixed'>

    </div>
    <div class='page-footer page-fixed'>
      <div class='legal-information'>
        <p>BA I FW 102b - 02/2015</p>
      </div>
    </div>
    <div class='wrapper'>
      <table>
        <thead>
          <tr>
            <td><div class='page-header-space'>&nbsp;</div></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class='page-content'>
              <div class='content flex flex-col justify-between w-full'>
                <div>
                  {{#each measureSheet.modules as |module|}}
                    <div style='page-break-after: always;'>
                      <div class='relative h-[0px] top-[5px] w-full'>
                        <div>
                          <div
                            class='flex flex-row-reverse text-main-theme align-middle items-baseline mx-5'
                          >
                            <img
                              src='{{StaticFileserver}}/attachment-two/anlage2code.png'
                              width='70px'
                            />
                          </div>
                        </div>
                      </div>
                      <div
                        class='flex border-[0.5px] border-solid border-black px-1 py-2'
                      >
                        <div class='flex flex-col w-full'>
                          <div>
                            <p class='text-2xl font-bold'>Bundesagentur für
                              Arbeit</p>
                          </div>
                          <div
                            class='flex flex-row mt-3 justify-between w-full'
                          >
                            <p class='text-2xl font-bold'>
                              Anlage 2 "Maßnahmebausteine"
                            </p>
                            <p class='text-2xl'>3</p>
                          </div>
                        </div>
                      </div>
                      <div class='mt-2 pl-2 px-1'>
                        <div class='flex flex-col'>
                          <div class='flex items-end flex-row'>
                            <p class='text-xl font-bold'>
                              "Maßnahmebausteine" der Weiterbildung
                            </p>
                            <p class='ml-2 text-[9px] underline'>{title}</p>
                          </div>
                          <div class='flex items-end mt-1 flex-row'>
                            <p class='text-xl'>siehe Kurzfragebogen vom</p>
                            <p class='ml-2 text-[9px] underline'>{date}</p>
                            <p class='ml-6 text-xl'>
                              (bitte beachten Sie auch die Ausfüllhinweise)
                            </p>
                          </div>
                        </div>
                      </div>
                      <div class='mt-1 font-normal leading-4'>
                        <table class='border-black border-solid w-full'>
                          <tbody>
                            <tr
                              class='border-[0.5px] bg-anlage2-th border-black border-solid'
                            >
                              <th
                                class='border-[0.5px] border-black border-solid py-1 max-w-[120px]'
                              >
                                <div>
                                  <p class='font-normal'>
                                    Bezeichnung des Maßnahmebausteins
                                  </p>
                                  <p class='font-normal'>(max. 50 Zeichen)</p>
                                </div>
                              </th>
                              <th
                                class='border-[0.5px] border-black border-solid max-w-[60px]'
                              >
                                <div>
                                  <p class='font-normal'>Gesamt-kosten in €</p>
                                </div>
                              </th>
                              <th
                                class='border-[0.5px] border-black border-solid max-w-[45px]'
                              >
                                <div>
                                  <p class='font-normal'>Anzahl Tage</p>
                                </div>
                              </th>
                              <th
                                class='border-[0.5px] border-black border-solid min-w-[70px] max-w-[70px]'
                              >
                                <div>
                                  <p class='font-normal'>
                                    Anzahl Unterrichts-einheiten
                                  </p>
                                </div>
                              </th>
                              <th
                                class='border-[0.5px] border-black border-solid max-w-[210px]'
                              >
                                <div>
                                  <p class='font-normal'>
                                    ggf. abweichende Schulungsstätte
                                  </p>
                                  <p class='font-normal'>
                                    (Ziffer 1.3 des Kurzfragebogens)
                                  </p>
                                </div>
                              </th>
                              <th
                                class='border-[0.5px] border-black border-solid py-2 max-w-[200px]'
                              >
                                <div>
                                  <p class='font-normal'>
                                    ggf. abweichende Angaben zum
                                  </p>
                                  <p class='font-normal'>
                                    Zulassungszeitraum und/oder zur
                                  </p>
                                  <p class='font-normal'>Zertifikats-Nummer</p>
                                  <p class='font-normal'>(Ziffern 2.2 oder 2.3
                                    des</p>
                                  <p class='font-normal'>Kurzfragebogens)</p>
                                </div>
                              </th>
                            </tr>
                            {{#each module}}
                              <tr
                                className='border-[0.5px] text-[9px] border-black border-solid'
                              >
                                <td
                                  className='border-[0.5px] border-black border-solid py-[3.25px] px-1'
                                >
                                  {{this.title}}
                                </td>
                                <td
                                  className='border-[0.5px] border-black border-solid py-[3.25px] text-center'
                                >
                                  {{this.price}}
                                </td>
                                <td
                                  className='border-[0.5px] border-black border-solid py-[3.25px] text-center'
                                >
                                  {{this.durationInDays}}
                                </td>
                                <td
                                  className='border-[0.5px] border-black border-solid py-[3.25px] text-center'
                                >
                                  {{this.durationInUE}}
                                </td>
                                <td
                                  className='border-[0.5px] border-black border-solid py-[3.25px] px-1'
                                >

                                </td>
                                <td
                                  className='border-[0.5px] border-black border-solid py-[3.25px] px-1'
                                >
                                  {{this.certificateId}}
                                </td>
                              </tr>
                            {{/each}}

                          </tbody>
                        </table>
                      </div>
                    </div>
                  {{/each}}
                </div>
              </div>
            </td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td><div class='page-footer-space'>&nbsp;</div></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </body>
</html>